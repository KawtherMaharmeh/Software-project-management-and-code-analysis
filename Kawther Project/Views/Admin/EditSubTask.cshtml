@model Kawther_Project.Models.SubTask
@{
    ViewData["Title"] = "Edit Sub Task";
    var mainTasks = ViewBag.MainTasks as List<Kawther_Project.Models.MainTask>;
}
<div class="container wow fadeInUp" data-wow-delay="0.3s">

    <h2 data-translate="task4">Edit Sub Task</h2>

    <form asp-action="EditSubTask" method="post">
        <input type="hidden" asp-for="Id" />

        <div class="form-group">
            <label asp-for="Name" data-translate="name">Name</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="MainTaskId" data-translate="task1">Main Task</label>
            <select asp-for="MainTaskId" class="form-control" asp-items="ViewBag.MainTaskList"></select>
        </div>
        <br />
        <button type="submit" class="btn btn-primary" data-translate="update">Update</button>
        <a asp-action="Index" class="btn btn-secondary" data-translate="back">Back</a>
    </form>
</div>