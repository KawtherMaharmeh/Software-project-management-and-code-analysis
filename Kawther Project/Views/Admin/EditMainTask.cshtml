@model Kawther_Project.Models.MainTask

@{
    ViewData["Title"] = "Edit Main Task";
}
<div class="container wow fadeInUp" data-wow-delay="0.3s">
    <h2 data-translate="task3">Edit Main Task</h2>

    <form asp-action="EditMainTask" method="post">
        <input type="hidden" asp-for="Id" />

        <div class="form-group">
            <label asp-for="Name" data-translate="name"></label>
            <input asp-for="Name" name="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <br />
        <button type="submit" class="btn btn-primary" data-translate="update">Update</button>
        <a asp-action="Index" class="btn btn-secondary" data-translate="back">Back</a>
    </form>

</div>
