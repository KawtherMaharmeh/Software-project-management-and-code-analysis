@model List<Kawther_Project.Models.MainTask>

@{
    ViewData["Title"] = "Main Task";
}
<div class="container wow fadeInUp" data-wow-delay="0.3s">
    <h2 data-translate="task1">Main Task</h2>

    <div style="padding:25px">
        <table class="table table-bordered mt-3 width-100">
            <thead>
                <tr>
                    <th data-translate="no">No.</th>
                    <th data-translate="name">Name</th>
                    <th data-translate="process">Process</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var task in Model)
                {
                    <tr>
                        <td>@task.Id</td>
                        <td>@task.Name</td>
                        <td>
                            <a asp-action="EditMainTask" asp-route-id="@task.Id" class="btn btn-primary btn-sm" data-translate="edit">Edit</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <a asp-action="CreateMainTask" class="btn btn-success" data-translate="task6">Add New Task</a>

</div>
