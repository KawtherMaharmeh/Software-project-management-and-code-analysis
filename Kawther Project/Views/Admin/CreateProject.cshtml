@model CreateProjectViewModel

@{
    ViewData["Title"] = "Create Project";
}
<div class="d-flex align-items-center justify-content-center wow fadeInUp" data-wow-delay="0.3s">

    <div class="chat-container">
        <h2 class="text-center" style="font-weight:bold;" data-translate="project1">Create Project</h2>
        <div class="chat-box">
            <form asp-action="CreateProject" enctype="multipart/form-data" method="post" class="text-center" style="font-weight:bold">
                <div class="form-group">
                    <label data-translate="project2">Project Name</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label data-translate="student1">Select Students</label>
                    <select asp-for="SelectedStudentIds" class="form-control" asp-items="@(new MultiSelectList(Model.Students, "Id", "Name"))" multiple="multiple" id="studentsDropdown">
                    </select>
                    <span asp-validation-for="SelectedStudentIds" class="text-danger"></span>
                </div>


                <div class="form-group">
                    <label data-translate="project3">Project Logo</label>
                    <input asp-for="LogoImage" type="file" class="form-control" />
                </div>


                <div class="form-group">
                    <label data-translate="supervisor">Supervisor</label>
                    <select asp-for="SupervisorId" class="form-control" asp-items="@(new SelectList(Model.Supervisors, "Id", "Name"))">
                        <option value="" data-translate="select">Select Supervisor</option>
                    </select>
                    <span asp-validation-for="SupervisorId" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary mt-3" data-translate="save">Save</button>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />

}
