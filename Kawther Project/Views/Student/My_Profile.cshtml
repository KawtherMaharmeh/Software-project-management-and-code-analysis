@model Kawther_Project.Models.User

<!DOCTYPE html>
<html >
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Profile Form</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #bb6ba5;
            font-family: Arial, sans-serif;
        }

        .profile-pic-box {
            background-color: #4a025b;
            width: 200px;
            height: 200px;
            border-radius: 20px;
            display: flex;
            justify-content: center;
            align-items: center;
            color: white;
            margin: 0 auto;
            font-weight: bold;
        }

        .title {
            font-size: 45px;
            font-family: 'Cursive', sans-serif;
            text-align: center;
            margin-top: 10px;
            font-weight: bold;
            color: white;
            padding: 10px;
        }

        .upload-btn {
            display: flex;
            justify-content: center;
            margin-top: 10px;
        }

        .form-container {
            max-width: 800px;
            margin: 30px auto;
            padding: 20px;
            border-radius: 10px;
        }

        label {
            font-weight: bold;
            margin-top: 10px;
        }

        .btn-update {
            display: block;
            margin: 30px auto 0 auto;
            width: 150px;
        }

        .chat-container {
            width: 100%;
            max-width: 900px;
            background: linear-gradient(to bottom, #a5749b01, #5e3c6201);
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
            text-align: center;
            position: relative;
        }


        .chat-box2 {
            background: rgba(255, 255, 255, 0.1);
            padding: 15px;
            border-radius: 10px;
            overflow-y: auto;
        }

    </style>
</head>
<body>

    <div class="d-flex align-items-center justify-content-center wow fadeInUp" data-wow-delay="0.3s">
        <div class="chat-container">

            <div class="chat-box2">
                <div class="container py-5 ">
                    <div class="d-flex align-items-center justify-content-center" style="justify-items:center">
                       

                        <div class="title">@Model.UserName</div>
                    </div>
                </div>
                <form asp-action="UpdateProfile" method="post" enctype="multipart/form-data">

                    <div class="container form-container">
                        <div class="row">
                            <div class="col-md-6">
                                <label data-translate="email">Email</label>
                                <input type="email" name="Email" class="form-control" value="@Model.Email" readonly>

                                <label data-translate="user">User Name</label>
                                <input type="text" name="UserName" class="form-control" value="@Model.UserName" readonly>

                                <label data-translate="phone">Phone</label>
                                <input type="text" name="PhoneNumber" class="form-control" value="@Model.PhoneNumber" required>

                                
                            </div>

                            <div class="col-md-6">
                                <label data-translate="birth">Birth Day</label>
                                <input type="text" name="BirthDate" class="form-control" value="@Model.Student?.BirthDate?.ToString("dd/MM/yyyy")">
                                <label data-translate="number">Number ID</label>
                                <input type="text" class="form-control" value="@Model.Student?.Id" readonly>
                          
                            </div>
                        </div>

                        <button class="btn btn-primary btn-update" data-translate="update">Update</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <script>
        const uploadImage = document.getElementById('uploadImage');
        const profileImage = document.getElementById('profileImage');

        uploadImage.addEventListener('change', function () {
            const file = this.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function (e) {
                    profileImage.innerHTML = `<img src="${e.target.result}" alt="Profile" style="width:100%; height:100%; border-radius: 20px; object-fit: cover;">`;
                };
                reader.readAsDataURL(file);
            }
        });
    </script>

</body>
</html>
