@model TeamLeaderViewModel


<section class="text-white py-5 px-3 px-md-5 headline_visitor wow fadeInUp" data-wow-delay="0.3s">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-12 col-md-6 mb-4 mb-md-0">
                <div class="card h-100 text-center border-0 card-custom_visitor">
                    <div class="card-body d-flex align-items-center justify-content-center">
                        <img src="~/images/lllo.png" width="100%" alt="">

                    </div>
                </div>
            </div>
            <div class="col-12 col-md-6 ">
                <h1 class="py-5" style="font-size:50px">Project Flow</h1>
                <p class="fs-5 fw-bold text-white" data-translate="text_content1">
                    Welcome to Project Flow System, the ideal platform designed to help students and professors
                    organize and track academic projects effectively. This system provides an integrated environment for
                    managing
                    study groups, tracking project progress, uploading files, and exchanging comments and feedback between
                    professors
                    and students.
                </p>
            </div>
        </div>
    </div>
</section>

<section class="container my-5">
    <div class="row justify-content-center align-items-center">

        <div class="col-12 col-md-3 mb-4 mb-md-0 wow fadeInLeft" data-wow-delay="0.3s">
            <div class="info-card_visitor text-center position-relative p-3">
                <h6 data-translate="consciousness">consciousness</h6>

                <div id="doctorMessagesCarousel" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-inner">
                        @for (int i = 0; i < Model.DoctorMessages.Count; i++)
                        {
                            var msg = Model.DoctorMessages[i];
                            <div class="carousel-item @(i == 0 ? "active" : "")">
                                <h6>@msg.DoctorName</h6>
                                <div class="info-bubble_visitor overflow-auto" style="max-height: 150px;">

                                    <p>@msg.MessageText</p>
                                </div>
                            </div>
                        }
                    </div>

                    <button class="carousel-control-prev" type="button" data-bs-target="#doctorMessagesCarousel" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" style="background-color: #000; border-radius: 50%;"></span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#doctorMessagesCarousel" data-bs-slide="next">
                        <span class="carousel-control-next-icon" style="background-color: #000; border-radius: 50%;"></span>
                    </button>
                </div>

                <div class="icon-box_visitor mt-3">
                    <img src="~/images/icon.png" alt="icon" width="50">
                </div>
            </div>
        </div>



        <div class="col-12 col-md-9 wow fadeInRight" data-wow-delay="0.3s">
            <h2 class="text-center fw-bold fs-2 mb-4" data-translate="TeamMembers">Team members</h2>
            <div class="row justify-content-center gx-4 gy-4">
                @foreach (var student in Model.Students)
                {
                    <div class="col-md-3 text-center row justify-content-center gx-4 gy-4 p-3 ">
                        <div class="project-card_leader d-flex align-items-center justify-content-center flex-column">
                            <h4>@student.Name</h4>
                            <div class="project-details_visitor">
                                <div class="col-12 d-flex flex-column align-items-center">
                                    <h4>@student.Name</h4>
                                    <p><strong data-translate="status">Status:</strong> @student.Status</p>
                                    <p><strong data-translate="tasks">TasksCompleted:</strong> @student.TasksCompleted</p>
                                </div>
                            </div>
                        </div>
                    </div>
                }

            </div>


        </div>
    </div>
</section>



<section class="px-5 mb-5">
    <h2 class="text-center fw-bold fs-2 mb-4 wow fadeInUp" data-wow-delay="0.3s" data-translate="previous">Previous graduation projects</h2>
    <div class="row justify-content-center gx-4 gy-4">
        @foreach (var project in Model.GraduationProjects)
        {
            <div class="col-md-4 text-center row justify-content-center gx-4 gy-4 p-3  wow fadeInUp" data-wow-delay="0.3 s">
                <div class="project-card_visitor d-flex align-items-center justify-content-center flex-column">
                    <img src="@project.ImagePath" class="img-fluid mb-2" alt="Project Logo" style="width: 80px;">
                    <h4>@project.Title</h4>

                    <div class="project-details_visitor">
                        <div class="col-5 d-flex flex-column align-items-start">
                            <img src="@project.ImagePath" class="img-fluid mb-2" alt="Project Logo" style="width: 80px;">
                            <h4>@project.Title</h4>
                        </div>

                        <div class="col-7 project-info_visitor">
                            <p><strong data-translate="year">Year:</strong> @project.Year</p>
                            <p><strong data-translate="students">Student:</strong></p>
                            <ul class="mb-1 ps-3">
                                @foreach (var student in project.Students.Split(","))
                                {
                                    <li>@student</li>
                                }
                            </ul>
                            <p><strong data-translate="supervisor">Supervisor:</strong> @project.Supervisor</p>
                        </div>
                    </div>
                </div>
            </div>

        }
    </div>
</section>


@foreach (var student in Model.Students)
{
    <a asp-controller="Chat" asp-action="SupervisorMessages" asp-route-projectId="@student.ProjectId">
        <img class="chat-btn" src="~/images/fi_72439.png" alt="" srcset="">
    </a>
}
