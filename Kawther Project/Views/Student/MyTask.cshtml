@model List<TaskDisplayViewModel>

@{
    ViewData["Title"] = "My Tasks";
}


<!DOCTYPE html>
<html lang="ar">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/TeamLeader/MyTaskStyle.css">
</head>

<body>

    <div class="container">
        <div class="boxContainer" >
            <h1 data-translate="task7" class="wow fadeInUp" data-wow-delay="0.3s" >
                My Tasks
            </h1>
            <table class="wow fadeInUp" data-wow-delay="0.4s">
                <tbody>
                    <tr>
                        <td class="linkData">
                            <div class="divHeader">
                                <p class="header" data-translate="task8">Main task name</p>

                                <p class="header txtSubtask" data-translate="task15">Subtask Name</p>
                                <p class="header" data-translate="task9">Task status</p>

                            </div>
                        </td>
                    </tr>
                    @foreach (var task in Model)
                    {
                        <tr>
                            <td class="linkData">
                                <div class="new">
                                    <p>@task.MainTaskName</p>

                                    <p class="txtSubtask">@task.SubTaskName</p>
                                    <p>@task.TaskStatus</p>

                                   
                                </div>
                                @if (task.TaskStatus == "In Progress")
                                {
                                    <div class="d-flex gap-2">
                                        <form asp-action="MarkTaskAsCompleted" asp-controller="TeamLeader" method="post" class="d-inline">
                                            <input type="hidden" name="taskId" value="@task.TaskId" />
                                            <button type="submit" class="btn btn-success btn-sm">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-check" viewBox="0 0 16 16">
                                                    <path d="M10.97 4.97a.75.75 0 0 1 1.07 1.05l-3.99 4.99a.75.75 0 0 1-1.08.02L4.324 8.384a.75.75 0 1 1 1.06-1.06l2.094 2.093 3.473-4.425z" />
                                                </svg>
                                            </button>
                                        </form>
                                        <form asp-action="MarkTaskAsCanceled" asp-controller="TeamLeader" method="post" class="d-inline">
                                            <input type="hidden" name="taskId" value="@task.TaskId" />
                                            <button type="submit" class="btn btn-danger btn-sm">
                                                ×
                                            </button>
                                        </form>
                                    </div>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <a asp-action="ReviewCode" asp-controller="TeamLeader" class="wow fadeInUp" data-wow-delay="0.7s">
                <button class="btnReview" data-translate="reviwe">
                    Reviwe Code
                </button>
            </a>
        </div>

    </div>
</body>
</html>
